<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_hourly_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/white_100"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_hourly_item_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="sdfds"
        android:textColor="@color/black_60"
        android:textSize="14dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_hourly_item_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="sdfds"
            android:textColor="@color/black_70"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/img_hourly_item_icon"
            android:layout_marginLeft="8dp"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_hourly_item_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="sdfds"
            android:textColor="@color/black_50"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_hourly_item_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/black_50"
            android:textDirection="ltr"
            android:textSize="10dp" />
    </LinearLayout>
</LinearLayout>