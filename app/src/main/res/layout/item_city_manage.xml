<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_city_item_root"
    android:background="@drawable/city_manage_item_selector"
    android:orientation="vertical">


    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="invisible"
            android:id="@+id/img_city_item_selected"
            android:src="@drawable/ic_selected_city"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/text_city_item_name"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/black_60"
            android:textSize="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_city_item_delete"
            android:src="@drawable/wic_very_hot"
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </LinearLayout>


    <TextView
        android:background="@color/black_10"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>